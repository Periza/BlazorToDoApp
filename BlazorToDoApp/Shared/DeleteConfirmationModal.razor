<DxPopup @bind-Visible="@IsVisible"
         ShowFooter="true">
    <BodyContentTemplate>
        <i>
            @Message
        </i>
    </BodyContentTemplate>
    <FooterContentTemplate>
        <DxButton RenderStyle="ButtonRenderStyle.Primary" Text="Confirm"
                  Click="@Confirm" />
        <DxButton RenderStyle="ButtonRenderStyle.Primary" Text="Cancel"
                  Click="@Cancel" />
    </FooterContentTemplate>
</DxPopup>



@code {
    private bool IsVisible { get; set; }

    public void Show()
    {
        IsVisible = true;
    }

    public void CloseModal()
    {
        IsVisible = false;
    }

    [Parameter]
    public string Message { get; set; }

    [Parameter]
    public EventCallback OnConfirm { get; set; }

    private void Confirm()
    {
        OnConfirm.InvokeAsync();
        IsVisible = false; // Close the modal
    }

    private void Cancel()
    {
        IsVisible = false; // Close the modal
    }
}
